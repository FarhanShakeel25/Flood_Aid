{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=floodaid;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "CHANGE_THIS_TO_SECURE_KEY_IN_PRODUCTION_MIN_32_CHARS",
    "Issuer": "FloodAid.Api",
    "Audience": "FloodAid.Frontend",
    "ExpiryMinutes": "1440"
  },
  "AuthSettings": {
    "OtpExpiryMinutes": 5,
    "LockoutThreshold": 5,
    "LockoutDurationMinutes": 15,
    "AccessTokenMinutes": 30,
    "RefreshTokenDays": 7,
    "ResetTokenMinutes": 60,
    "PasswordCacheDays": 30
  },
  "RateLimiting": {
    "Auth": {
      "PermitLimit": 5,
      "WindowMinutes": 1,
      "QueueLimit": 0
    },
    "Donation": {
      "PermitLimit": 10,
      "WindowMinutes": 1,
      "QueueLimit": 0
    }
  },
  "Cache": {
    "UseRedis": false,
    "Redis": {
      "ConnectionString": "localhost:6379"
    }
  }
}

